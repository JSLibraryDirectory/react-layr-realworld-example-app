{
  "apps": [
    {
      "name": "realworld/database",
      "cwd": "./database",
      "script": "start.sh",
      "interpreter": "bash",
      "restart_delay": 15000
    },
    {
      "name": "realworld/backend",
      "cwd": "./backend",
      "script": ".",
      "args": "start --@dev",
      "env": {
        "MONGODB_STORE_CONNECTION_STRING": "mongodb://username:password@localhost:13579/admin",
        "DEBUG": "realworld:*"
      },
      "interpreter": "run",
      "watch": ["@resource.json", "@resource.dev.json", "src", "../shared/dist"],
      "restart_delay": 15000
    },
    {
      "name": "realworld/frontend",
      "cwd": "./frontend",
      "script": ".",
      "args": "start --@dev",
      "interpreter": "run",
      "watch": [
        "@resource.json",
        "@resource.dev.json",
        "index.html",
        "src",
        "assets",
        "../shared/dist"
      ],
      "restart_delay": 15000
    }
  ]
}
